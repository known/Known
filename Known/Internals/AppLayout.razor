@inherits BaseComponent

<KLayout OnReloadPage="OnReloadPage">
    @if (!IsHome)
    {
        <div class="kui-app-nav ant-btn-primary">
            @if (!string.IsNullOrWhiteSpace(Context.Current?.BackUrl))
            {
                <span class="back" @onclick="e => Context.Back()">
                    <Icon Type="left" Theme="IconThemeType.Outline" />
                    <span>@Language[Language.Back]</span>
                </span>
            }
            @Context.Current?.Name
        </div>
    }
    <div class="@PageClass">
        <ReloadContainer @ref="reload">
            @ChildContent
        </ReloadContainer>
    </div>
    @if (IsTab)
    {
        <AppTab Items="TabItems" />
    }
</KLayout>