@inherits BaseComponent

<TypeForm Class="kui-system" Model="Model" Style="margin-top:20px">
    <AntRow>
        <DataItem Label="默认密码">
            <AntInput @bind-Value="@Model.UserDefaultPwd" />
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="登录验证码">
            <AntSwitch @bind-Value="@Model.IsLoginCaptcha" Category="@nameof(StatusType)" />
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="账号单一客户端" Inline>
            <AntSwitch @bind-Value="@Model.IsLoginOne" Category="@nameof(StatusType)" Style="width:56px" />
            @if (Model.IsLoginOne)
            {
                <AntInput @bind-Value="@Model.TipLoginOne" Placeholder="账号单一客户端登录退出提示内容" Style="width:350px" />
            }
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="默认密码修改提醒" Inline>
            <AntSwitch @bind-Value="@Model.IsChangePwd" Category="@nameof(StatusType)" Style="width:56px" />
            @if (Model.IsChangePwd)
            {
                <AntInput @bind-Value="@Model.TipChangePwd" Placeholder="默认密码修改提醒提示内容" Style="width:350px" />
			}
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="密码长度">
            <AntInteger @bind-Value="@Model.PwdLength" />
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="密码复杂度">
            <AntSelectCode @bind-Value="@Model.PwdComplexity" Category="@nameof(PasswordComplexity)" Style="width:280px" />
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="账号水印" Inline>
            <AntSwitch @bind-Value="@Model.IsWatermark" Category="@nameof(StatusType)" Style="width:56px" />
            @if (Model.IsWatermark)
            {
                <AntSelectCode @bind-Value="@Model.Watermark" Category="@nameof(WatermarkType)" Style="width:120px" />
            }
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="允许附件大小">
            <AntInteger @bind-Value="@Model.MaxFileSize" /> M
        </DataItem>
    </AntRow>
    <div class="kui-form-button">
        <KButton Type="ButtonType.Primary" Name="保存" OnClick="OnSaveModel" />
    </div>
</TypeForm>