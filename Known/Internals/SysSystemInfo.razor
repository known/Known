@inherits BaseComponent

<TypeForm Class="kui-system" Model="Model" Style="margin-top:20px">
    <AntRow>
        <DataItem Label="企业名称">
            @($"{Model.System?.CompNo}-{Model.System?.CompName}")
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="系统名称">
            <KEditInput Value="@Model.System?.AppName" OnSave="OnSaveAppNameAsync" />
        </DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="系统版本">@Model.Version?.AppVersion</DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="软件版本">@Model.Version?.SoftVersion</DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="构建时间">@($"{Model.Version?.BuildTime:yyyy-MM-dd HH:mm:ss}")</DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="框架版本">@Model.Version?.AllVersion</DataItem>
    </AntRow>
    <AntRow>
        <DataItem Label="运行时长">@($"{Model.RunTime} H")</DataItem>
    </AntRow>
    @if (!Config.App.IsPlatform && !string.IsNullOrWhiteSpace(Model.System?.ProductId))
    {
        <AntRow>
            <DataItem Label="产品ID">@Model.System?.ProductId</DataItem>
            <DataItem Label="产品密钥">
                <KEditInput Value="@Model.System?.ProductKey" OnSave="OnSaveProductKeyAsync" />
            </DataItem>
        </AntRow>
    }
    @if (!string.IsNullOrWhiteSpace(UIConfig.Copyright))
    {
        <AntRow>
            <DataItem Label="版权信息">@UIConfig.Copyright</DataItem>
        </AntRow>
    }
    @if (!string.IsNullOrWhiteSpace(UIConfig.SoftTerms))
    {
        <AntRow>
            <DataItem Label="软件许可">@UIConfig.SoftTerms</DataItem>
        </AntRow>
    }
</TypeForm>