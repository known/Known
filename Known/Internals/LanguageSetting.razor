@inherits BaseComponent

<LanguageSettingTable DataSource="Language.Items" HidePagination>
    <StringColumn Title="Id">
        <AntInput @bind-Value="@context.Id" />
    </StringColumn>
    <StringColumn Title="名称">
        <AntInput @bind-Value="@context.Name" />
    </StringColumn>
    <StringColumn Title="@Language.Icon">
        <IconPicker Value="@context.Icon" Text="@context.Icon" ValueChanged="value=>context.Icon=value?.ToString()" />
    </StringColumn>
    <StringColumn Title="@Language.Default">
        <AntSwitch @bind-Value="@context.Default" />
    </StringColumn>
    <StringColumn Title="@Language.Enable">
        <AntSwitch @bind-Value="@context.Enabled" />
    </StringColumn>
    <StringColumn Title="@Language.Field">@context.Code</StringColumn>
</LanguageSettingTable>