@inherits BaseComponent

@if (Visible)
{
    <div @ref="container" class="kui-upload-field" @onpaste="OnPasteFileAsync">
        @if (IsDrag) {
            <div class="kui-upload ant-upload ant-upload-drag ant-upload-select ant-upload-select-text">
                <div class="ant-upload" style="display:grid;">
                    @if (!IsReadOnly) {
                        @BuildInput
                    }
                    <div class="ant-upload-drag-container">
                        <p class="ant-upload-drag-icon"><Icon Type="inbox" /></p>
                        <p class="ant-upload-text">@Language[Language.DragFileUpload]</p>
                        <p class="ant-upload-hint">@Language[HintText]</p>
                    </div>
                </div>
            </div>
        } else if (IsButton) {
            if (!IsReadOnly) {
                <div class="kui-upload">
                    <div class="kui-button">
                        <KIcon Icon="upload" />
                        <span>@Language[Language.Upload]</span>
                        @BuildInput
                    </div>
                    @BuildTemplate
                </div>
            }
        } else if (IsImage) {
            <div class="kui-upload-image">
                @if (sysFiles != null && sysFiles.Count > 0) {
                    foreach (var item in sysFiles) {
                        <div class="kui-image">
                            @if (!IsReadOnly && IsDelete) {
                                <Icon Type="close-circle" OnClick="e=>OnDeleteFileAsync(item)" />
                            }
                            <div class="kui-thumbnail" @onclick="e=>ShowFullscreen(item)">
                                @if (!string.IsNullOrWhiteSpace(item.Id)) {
                                    <img src="@item.FileUrl?.OriginalUrl" />
                                } else {
                                    <img src="@GetImageSrc(item.ThumbnailData)" />
                                }
                            </div>
                        </div>
                    }
                }
                @if (!IsReadOnly) {
                    <div class="kui-upload ant-upload ant-upload-drag">
                        <Icon Type="camera" />
                        @BuildInput
                    </div>
                }
            </div>
            @if (showFullscreen) {
                <div class="fullscreen-overlay" @onclick="CloseFullscreen">
                    <span class="close-btn" @onclick="CloseFullscreen">&times;</span>
                    @if (!string.IsNullOrWhiteSpace(currentFullscreenImage?.Id)) {
                        <img class="fullscreen-image" src="@currentFullscreenImage?.FileUrl?.OriginalUrl" />
                    } else {
                        <img class="fullscreen-image" src="@GetImageSrc(currentFullscreenImage?.ThumbnailData)" />
                    }
                </div>
            }
        } else {
            if (!IsReadOnly) {
                <div class="kui-upload">
                    @BuildInput
                    @BuildTemplate
                </div>
            }
        }
        @if (isAdding) {
            <div class="ant-btn-link">@Language[Language.Loading]</div>
        }
        @if (sysFiles != null && sysFiles.Count > 0 && !IsImage) {
            <div class="kui-form-files">
                @foreach (var item in sysFiles) {
                    var url = item.FileUrl;
                    <div>
                        @if (!IsReadOnly && IsDelete) {
                            <span class="kui-link kui-danger" @onclick="e=>OnDeleteFileAsync(item)">@Language[Language.Delete]</span>
                        }
                        <KFileLink Item="item" />
                        @if (!string.IsNullOrWhiteSpace(item.Id)) {
                            <KIcon Icon="file" Title="@Language.PreviewFile" OnClick="this.Callback<MouseEventArgs>(e => OnShowFile(item))" />
                        }
                    </div>
                }
            </div>
        }
    </div>
}

@code {
    private RenderFragment BuildInput => @<div>
        <InputFile multiple="@IsMultiple" webkitdirectory="@Directory" accept="@Accept" disabled="@(!Enabled)" OnChange="OnInputFileChangedAsync" @attributes="InputAttributes" />
    </div>;

    private RenderFragment BuildTemplate => @<div class="template">
        @if (!string.IsNullOrWhiteSpace(TemplateUrl)) {
            <KAnchor Href="@TemplateUrl" Download="">@Language[Language.Template]</KAnchor>
        }
    </div>;
}