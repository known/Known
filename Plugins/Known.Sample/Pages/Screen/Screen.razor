                        <div class="allnav" id="echart6"></div>
                        <div class="boxfoot"></div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="back"></div>
    </div>
</KFullScreen>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
        {
            await JSRuntime.InvokeJsAsync("ScreenInit");
        }
    }
}