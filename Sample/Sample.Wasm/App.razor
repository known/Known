@inject IJSRuntime JSRuntime

<KContext Value="Context">
    <Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="Config.Assemblies">
        <Found Context="routeData">
            <KRouteData Value="routeData">
                <RouteView RouteData="routeData" DefaultLayout="typeof(AdminLayout)" />
            </KRouteData>
        </Found>
        <NotFound>
            <Result Status="ResultStatus.Http404" />
        </NotFound>
    </Router>
    <KContainer />
</KContext>

@code {
    [Inject] private UIContext Context { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Context.IsMobile = await JSRuntime.CheckMobileAsync();
    }
}